	<defName>WVC_HediffMutation_SandSkin</defName>
	<label>Sand skin</label>
	<extraTooltip>Increases resistance to heat damage, but reduces to the rest.</extraTooltip>
	<stages>
	  <li>
		<statFactors>
			<ArmorRating_Sharp>0.7</ArmorRating_Sharp>
