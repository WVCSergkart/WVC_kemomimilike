  <ThingDef MayRequire="honkai.girls.sergkart" ParentName="ResourceBase">
	<defName>VFEI_ValkyrieGenome_WVC</defName>
	<!-- <label>valkyrie genetic material</label> -->
	<label>living form genome</label>
	<description>Genetic material of several different species, mixed into one payload of DNA.</description>
	<descriptionHyperlinks>
	  <ConceptDef>WVC_LivingFormGenome</ConceptDef>
	</descriptionHyperlinks>
	<graphicData>
	  <texPath>Things/Item/GenomeIcons/VFEI_ValkyrieGenome_WVC</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<soundInteract>Standard_Drop</soundInteract>
	<soundDrop>Standard_Drop</soundDrop>
	<statBases>
	  <MaxHitPoints>15</MaxHitPoints>
	  <MarketValue>300</MarketValue>
	  <Mass>0.10</Mass>
	  <Flammability>0.0</Flammability>
	  <DeteriorationRate>6</DeteriorationRate>
	  <RoyalFavorValue MayRequire="ludeon.rimworld.royalty">1</RoyalFavorValue>
	</statBases>
	<thingCategories>
	  <li>Manufactured</li>
	</thingCategories>
	<tickerType>Never</tickerType>
	<comps>
	  <li Class="CompProperties_Glower">
		<glowRadius>2</glowRadius>
		<glowColor>(78, 226, 229, 0)</glowColor>
	  </li>
	</comps>
  </ThingDef>

