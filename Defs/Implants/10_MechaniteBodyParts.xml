<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef Name="WVC_Hediff_BodyPart_Mechanite" ParentName="AddedBodyPartBase" Abstract="True">
	<description>A part formed by mechanites, slightly better than a bionic parts, but can only be implanted into semi-organic beings.\n\nMechanites can be used as weapons, both internal organs and limbs.</description>
	<scenarioCanAdd>false</scenarioCanAdd>
	<defaultLabelColor>(255,224,200)</defaultLabelColor>
	<addedPartProps>
	  <solid>true</solid>
	  <partEfficiency>1.30</partEfficiency>
	  <betterThanNatural>true</betterThanNatural>
	</addedPartProps>
	<priceOffset>700</priceOffset>
	<comps>
	  <li Class="HediffCompProperties_VerbGiver">
		<tools>
		  <li>
			<label>mechanites</label>
			<capacities>
			  <li>Scratch_MechanitesPunch_WVC</li>
			</capacities>
			<power>14</power>
			<cooldownTime>0.9</cooldownTime>
			<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
			<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
		  </li>
		</tools>
	  </li>
	</comps>
  </HediffDef>

