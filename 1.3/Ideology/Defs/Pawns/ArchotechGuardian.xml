<Defs>

  <ThingDef ParentName="DryadBase" Name="ThingDef_ArchotechDryad_WVC" Abstract="True">
	<!-- <defName>ArchotechGuardian_WVC</defName> -->
	<label>guardian</label>
	<description>A small drone formed from a cluster of nanites, it moves due to a gravity cushion. Has a built-in plasma cannon and a nano forge. The excess components produced by the nano-forge are discarded. The drone is needed to protect the gaurler.</description>
	<descriptionHyperlinks>
	  <ThingDef>ComponentSpacer</ThingDef>
	</descriptionHyperlinks>
	<statBases>
	  <ArmorRating_Heat>2.0</ArmorRating_Heat>
	  <MeatAmount>0</MeatAmount>
	  <Flammability>0.0</Flammability>
	</statBases>
	<damageMultipliers>
		<li>
			<damageDef>Flame</damageDef>
			<multiplier>0</multiplier>
		</li>
		<li>
			<damageDef>Frostbite</damageDef>
			<multiplier>0</multiplier>
		</li>
		<li>
			<damageDef>TornadoScratch</damageDef>
			<multiplier>0</multiplier>
		</li>
		<li MayRequire="kentington.saveourship2">
			<damageDef>VacuumDamage</damageDef>
			<multiplier>0</multiplier>
		</li>
	</damageMultipliers>
	<race>
	  <body>GuardianBody_WVC</body>
	  <fleshType>RockLikeFlesh_WVC</fleshType>
	  <useMeatFrom>Dryad_Basic</useMeatFrom>
	  <baseBodySize>0.5</baseBodySize>
	  <lifeStageAges>
		<li>
		  <def>Animal_DefaultAdult_WVC</def>
		</li>
	  </lifeStageAges>
      <trainability>Intermediate</trainability>
	</race>
	<comps>
		<li Class="CompProperties_Spawner">
			<thingToSpawn>ComponentSpacer</thingToSpawn>
			<spawnCount>1</spawnCount>
			<spawnIntervalRange>240000</spawnIntervalRange>
			<writeTimeLeftToSpawn>true</writeTimeLeftToSpawn>
			<showMessageIfOwned>true</showMessageIfOwned>
		</li>
		<li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="AnimalBehaviours.CompProperties_Floating">
			<canCrossWater>true</canCrossWater>
		</li>
	</comps>
    <tools Inherit="False">
	  <li>
		<label>frame</label>
		<capacities>
		  <li>Blunt</li>
		</capacities>
		<power>12</power>
		<cooldownTime>2</cooldownTime>
		<surpriseAttack>
		  <extraMeleeDamages>
			<li>
			  <def>Stun</def>
			  <amount>14</amount>
			</li>
		  </extraMeleeDamages>
		</surpriseAttack>
	  </li>
    </tools>
	<verbs>
		<li>
			<label>plasma gun</label>
			<verbClass>Verb_Shoot</verbClass>
			<accuracyTouch>1.0</accuracyTouch>
			<accuracyShort>1.0</accuracyShort>
			<accuracyMedium>1.0</accuracyMedium>
			<accuracyLong>1.0</accuracyLong>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultCooldownTime>0.7</defaultCooldownTime>
			<warmupTime>0.4</warmupTime>
			<burstShotCount>1</burstShotCount>
			<ticksBetweenBurstShots>4</ticksBetweenBurstShots>
			<minRange>1</minRange>
			<range>12.9</range>
			<defaultProjectile>Bullet_ArchoPlasma_WVC</defaultProjectile>
			<soundCast>Shot_ChargeBlaster</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<targetParams>
			  <canTargetLocations>true</canTargetLocations>
			</targetParams>
		</li>
	</verbs>
    <butcherProducts>
      <Steel>30</Steel>
      <Plasteel>10</Plasteel>
    </butcherProducts>
  </ThingDef>

